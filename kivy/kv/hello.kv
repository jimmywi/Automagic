#:import Factory kivy.factory.Factory
<CustButton@Button>:
    font_size: 32

<CustomGrid>:
    id: text
    display: entry
    rows: 3
    padding: 10
    spacing: 10
 
    BoxLayout:
        size_hint_y: None
        height: 32 
        TextInput:
            id: entry
            size_hint_y: None
            height: 32 
            multiline: False

    BoxLayout:
        Button:
            text: 'Load'
            on_release: Factory.MyDialog().open()
        Button:
            text: 'Save'

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
        CustButton:
            text: "+"
            on_press: entry.text += self.text

<MyPopup@Popup>:
    auto_dismiss: False
    Button:
        text: 'Close me!'
        on_release: root.dismiss()

<MyDialog@Dialog>:
    BoxLayout:
        pos: self.pos
        size: self.size
        orientation: "vertical"
        FileChooserListView:
            id: filechoose

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.dismiss()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

